{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "setupFiles": ["<rootDir>/setup-platform-express.js"],
  "testMatch": ["**/*.e2e-spec.ts"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "globals": {
    "ts-jest": {
      "tsconfig": "<rootDir>/../tsconfig.json",
      "isolatedModules": false,
      "diagnostics": false
    }
  },
  "moduleFileExtensions": ["ts", "js", "json", "node"],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  }
}
